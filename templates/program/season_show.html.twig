{% extends 'base.html.twig' %}
{% block title %}Série #{% endblock %}
{% block body %}
    <div>
            <h1>{{ programs.title }}</h1>
    </div>
    <div>
           <h1>{{ seasons.description }}</h1>
        {% for episode in episodes %}

            <a href="{{ path("program_episode_show", {"programId" : 1, "seasonId": 2, "episodeId": 3}) }}"><h2>Episode {{ loop.index}} - {{ episode.title }}</h2></a>
        {% endfor %}
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}